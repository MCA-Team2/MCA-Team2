<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <Button
            android:id="@+id/record_start_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Start_Record" />

        <Button
            android:id="@+id/record_stop_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Stop_Record" />

        <Button
            android:id="@+id/file_play_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Start_Play" />


        <Button
            android:id="@+id/file_stop_button"
            android:layout_width="187dp"
            android:layout_height="wrap_content"
            android:text="Stop_Play" />

    </LinearLayout>
</layout>